<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/iv_navHeader_userImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_navHeader_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Account"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/iv_navHeader_userImage"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tv_navHeader_userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_navHeader_userName"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/iv_navHeader_userImage"
            android:text="guest@email.com"
            android:maxLines="1" />
        <TextView
            android:id="@+id/tv_navHeader_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not verified"
            android:layout_below="@id/tv_navHeader_userEmail"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/iv_navHeader_userImage"
            android:layout_alignBottom="@id/iv_navHeader_userImage"
            />
    </RelativeLayout>

</LinearLayout>
